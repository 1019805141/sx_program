/* pages/org/curriculum/curriculum.wxss */
.tab{
    overflow: hidden;
    padding-bottom: 20rpx;
    text-align: center;
    margin-top: 20rpx;
}
.tab>view{
    color: #666666;
    width: 20%;
    float: left;
    font-size: 32rpx;
    padding-bottom: 16rpx;
}
.tab>.active{
    color: #0DA6FF;
    position: relative;
}
.line{
    width: 72rpx;
    height: 2px;
    position: absolute;
    bottom: 0;
    background: #0DA6FF;
    left: 26%;
}
.kclist {
    border: 1px solid #E6E6E6;
    padding: 14rpx 20rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.kclist>image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    float: left;
}

.kclist_text {
    float: left;
    margin-left: 20rpx;
    width: 50%;
}

.kclist_text>view {
    font-size: 30rpx;
    color: #262626;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
    margin-top: 12rpx;
}

.kclist_text {
    font-size: 28rpx;
    color: #808080;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    overflow: hidden;
}
.kclist_right{
    float: right;
    width: 25%;
}
.kclist_right_btn{
    background: #0da6ff;
    color: #ffffff;
    font-size: 28rpx;
    text-align: center;
    height: 50rpx;
    border-radius: 6rpx;
    line-height: 50rpx;
    margin-top: 12rpx;
    margin-bottom: 20rpx;
    padding: 0 6rpx;
}
.kclist_right_dw{
    overflow: hidden;
}
.kclist_right_dw>image{
    width: 20rpx;
    height: 30rpx;
    float: left;
    margin-right: 14rpx;
    margin-top: 6rpx;
}
.kclist_right_dw>p{
    font-size: 28rpx;
    color: #333333;
}
.kclist_right_dw>p>span{
    color: #FF3B0D;
}
.mar{
    margin-top: 30rpx;
}
.zanwu>image{
    width: 362rpx;
    height: 258rpx;
    display: block;
    margin: auto;
}
.zanwu{
    overflow: hidden;
    margin: 0rpx 0 30rpx 0;
    text-align: center;
    width: 100%;
    margin-top: 200rpx;
}
.zanwu>view{
    display: block;
    margin-top: 10rpx;
    color: #666666;
}