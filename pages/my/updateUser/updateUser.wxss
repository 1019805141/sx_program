/* pages/my/updateUser/updateUser.wxss */
.box>image{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    position: absolute;
    left: 42%;
    top: -7%;
}
.box{
    border-radius: 20rpx;
    background: #0DA6FF;
    width: 690rpx;
    height: 900rpx;
    position: relative;
    margin-top: 100rpx;
}
.box_list{
    border-bottom: 1px solid #ffffff;
    padding-bottom: 10rpx;
    margin-bottom: 60rpx;
    overflow: hidden;
}
.box_list p{
    display: inline-block;
    color: #ffffff;
    font-weight: bolder;
    margin-right: 30rpx;
    float: left;
}
.box_list span{
    display: inline-block;
    color: #ffffff;
}
.box_group{
    width: 500rpx;
    margin: 0 auto;
    padding-top: 120rpx;
}
.btn{
    text-align: center;
    background: #ffffff;
    color:#0DA6FF;
    width: 500rpx;
    margin: 0 auto;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 20rpx;
    margin-top: 100rpx;
}
.box_list>input{
    border: none;
    color: #ffffff;
    float: left;
}
.btnss{
    float: right;
    color: #FCFF0D;
}


/* 三级联动 */
.infoText{
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center; 
}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ----------------------------------------- */

.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;

}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}

.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx; 
  line-height: 100rpx; 
  align-items:center;
}


text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.left-bt{
  left: 30rpx;
}
.right-bt {
