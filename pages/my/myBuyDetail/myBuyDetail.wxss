/* pages/my/myBuyDetail/myBuyDetail.wxss */
.kecheng{
    background: #0da6ff;
    text-align: center;
    height: 74rpx;
    border-radius: 20rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.kecheng>i{
    width:180rpx ;
    height: 1px;
    background: #ffffff;
    display: inline-block;
    margin: 0 20rpx;
    margin-bottom: 10rpx;
}
.kecheng>view{
    display: inline-block;
    color: #ffffff;
    line-height: 74rpx;
}
.title{
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
}
.box{
    border: 1px solid #E6E6E6;
    margin-bottom: 30rpx;
    position: relative;
}
.box_top{
    padding: 20rpx;
    overflow: hidden;
}
.box_top>image{
    width: 130rpx;
    height: 130rpx;
    display: block;
    float: left;
    margin-right: 20rpx;
}
.box_top_text{
    float: left;
    width: 56%;
}
.box_top_text>view{
    font-size: 30rpx;
    color: #262626;
    margin-top: 10rpx;
}
.box_top_text>p{
    color: #808080;
    font-size: 28rpx;
    margin-top: 10rpx;
    display: block;
}
.daitiyan{
    float: right;
    font-size: 28rpx;
    color: #0DA6FF;
    border-radius: 6rpx;
    margin-top: 40rpx;
}
.yiwancheng{
    float: right;
    font-size: 28rpx;
    color: #893BFF;
    border-radius: 6rpx;
    margin-top: 40rpx;
}
.daifukuan{
    float: right;
    font-size: 28rpx;
    color: #FF3B0D;
    border-radius: 6rpx;
    margin-top: 40rpx;
}
.box_bottom{
    padding: 10rpx 0;
    border-top: 1px solid #E6E6E6;
    padding-left: 30rpx;
}
.box_bottom>image{
    width: 20rpx;
    height: 30rpx;
    float: left;
    display: block;
    margin-right: 15rpx;
    margin-top: 6rpx;
}
.box_bottom>view{
    color: #808080;
    font-size: 28rpx;
}
.title{
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    color: #262626;
}
.text{
    color: #666666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.text>p{
    color: #262626;
    margin-left: 30rpx;
}
.tel{
    color: #199CFF!important;
}
.mar{
    margin-bottom: 30rpx;
    border-bottom: 1px solid #E6E6E6;
    padding-bottom: 30rpx;
}
.price{
    color: #ff3b0d!important;
}
.btn_group{
    text-align: center;
    margin-top: 50rpx;
}
.btn{
    background: #0DA6FF;
    color: #ffffff;
    text-align: center;
    border-radius: 10rpx;
    width: 226rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    margin-top: 30rpx;
}
.btn:last-child{
    margin-bottom: 30rpx;
}