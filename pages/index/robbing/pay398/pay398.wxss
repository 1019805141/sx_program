/* pages/index/robbing/pay398/pay398.wxss */
.biao {
    margin-bottom: 30rpx;
}

.biao>view {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #666666;
}

.biao>input {
    width: 100%;
    border-radius: 10rpx;
    border: 1px solid #CCCCCC;
    height: 65rpx;
    line-height: 65rpx;
}
.title{
    color: #262626;
    margin: 30rpx 0 30rpx 0;
    font-weight: bold;
}

.button_container {
    overflow: hidden;
}

.button_container button {
    width: 31%;
    margin: 1%!important;
    float: left;
    min-width: 31%;
    max-width: 31%;

}

/* 按钮未选中 */
.normal_button {
    border: 1px solid #DBDBDB;
    color: #222222;
    font-weight: normal;
    font-size: 28rpx;
}

/* 按钮选中 */
.checked_button {
    background: #0DA6FF;
    color: white;
    font-size: 28rpx;
    font-weight: normal;
}

.taocan{
    border: 1px solid #eff3f7;
    border-radius: 10rpx;
    padding: 15rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
}
.taocan>image{
    width: 190rpx;
    height: 160rpx;
    border-radius: 10rpx;
    float: left;
}
.taocan_t{
    float: left;
    margin-left: 20rpx;
    width: 68%;
}
.taocan_t>view{
    color: #333333;
    float: left;
    margin-bottom: 26rpx;
}
.taocan_t>span{
    float: right;
    color: #FF5D51;
    display: inline-block;
}
.taocan_biaoqian{
    display: block;
    margin-top: 10rpx;
    clear: both;
    margin-bottom: 30rpx;
}
.taocan_biaoqian>li{
    font-size: 24rpx;
    color: #0DA6FF;
    border: 1px solid #0DA6FF;
    border-radius: 100rpx;
    padding:4rpx 14rpx;
    margin-right: 10rpx;
}
.taocan_dw{
    float: right;
}
.taocan_dw>image{
    width: 19rpx;
    height: 29rpx;
    display: block;
    float: left;
}
.taocan_dw>p{
    color: #333333;
    float: left;
    margin-left: 10rpx;
}
.taocan_miaoshu{
    display: block;
    margin-top: 10rpx;
    clear: both;
    color: #565656;
    font-size: 26rpx;
}
.taocan_miaoshu2{
    display: block;
    margin-top: 10rpx;
    clear: both;
    color: #909090;
    font-size: 26rpx;
}
.pay{
    position: fixed;
    border-top: 1px solid #e5e5e5;
    height: 140rpx;
    background: #ffffff;
    bottom: 0;
    left: 0;
    width: 100%;
}
.pay_left{
    float: left;
    width: calc(70% - 30rpx);
    padding: 15rpx 0 15rpx 30rpx;
}
.pay_left>view{
    color:#333333;
}
.pay_left>view>span{
    color: #FF573B;
    font-weight: bold;
}

checkbox .wx-checkbox-input {
    width: 30rpx;
    height: 30rpx;
  
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #0394F0;
    border-color: #0394F0;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 20rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}
.pay_left>p{
    display: inline-block;
    font-size: 24rpx;
    color: #909090;
}
.pay_right{
    text-align: center;
    line-height: 140rpx;
    color: #ffffff;
    background: #0DA6FF;
    float: right;
    width: 30%;
}
.mar{
    margin-bottom: 140rpx;
}